<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="56dp">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:src="@drawable/album_white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="8dp"
        android:gravity="bottom|center_horizontal"
        android:layout_marginLeft="8dp"
        android:id="@+id/iv_ali_album_icon"/>

    <TextView
        android:layout_width="56dp"
        android:layout_height="20dp"
        android:paddingBottom="8dp"
        android:text="2009"
        android:layout_marginLeft="8dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="10sp"
        android:id="@+id/tv_ali_album_year"
        android:gravity="bottom|center_horizontal"
        android:layout_below="@+id/iv_ali_album_icon" />

    <TextView
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="Skyfall "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_ali_album_name"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_ali_album_year"
        android:layout_toEndOf="@+id/tv_ali_album_year"
        android:layout_toLeftOf="@+id/iv_ali_album_expand"
        android:layout_toStartOf="@+id/iv_ali_album_expand"
        android:gravity="center_vertical" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:src="@drawable/ic_expand_more_white_48dp"
        android:id="@+id/iv_ali_album_expand"
        android:gravity="center_vertical" />

</RelativeLayout>