<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/song_list_item_height">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="@dimen/song_list_item_height"
        android:src="@drawable/music_white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/song_list_image_padding"
        android:layout_marginLeft="24dp"
        android:id="@+id/iv_sli_song_icon"/>

    <TextView
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/song_list_item_height"
        android:layout_marginRight="16dp"
        android:text="Minutes to Midnight"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_sli_song_name"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/iv_sli_song_icon"
        android:layout_toEndOf="@+id/iv_sli_song_icon"
        android:gravity="center_vertical" />


</RelativeLayout>